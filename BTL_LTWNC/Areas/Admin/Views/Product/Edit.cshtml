@model BTL_LTWNC.Models.EF.Product

@if (Model == null)
{
    <h1 class="text-center text-uppercase text-danger fw-bold">Không có bản ghi nào!!!</h1>
}
else
{
    <div class="p-5">
        <h1 class="text-center text-uppercase font-bold">Chỉnh sửa sản phẩm</h1>

        <form method="post" asp-area="Admin" asp-controller="Product" asp-action="Edit" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Mã sản phẩm</label>
                <input type="text" class="form-control" asp-for="iProductID" readonly>
                <span asp-validation-for="iProductID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                <input type="text" class="form-control" asp-for="sProductName">
                <span asp-validation-for="sProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Loại sản phẩm</label>
                @Html.DropDownListFor(model => model.iProductCategoryID, (IEnumerable<SelectListItem>)ViewBag.cateList, "Chọn loại sản phẩm", htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label">Giá Tiền</label>
                <input type="number" class="form-control" asp-for="fPrice" min="0">
                <span asp-validation-for="fPrice" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-8">
                    <label class="form-label">Ảnh</label>
                    <input type="file" id="ChooseImg" class="form-control" asp-for="ImagePath">
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>

                <div class="col-4">
                    <img src="~/public/images/@Model.sImageUrl" id="PrevImg"
                         style="width: 150px; height:150px; border: 1px solid red; border-radius: 10px; padding: 10px" />
                </div>
            </div>

            <div class="d-flex gap-3">
                <a class="btn btn-danger" href="/admin/product/QuanLySanPham">Quay lại</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
}

@section Scripts {
    <script src="~/AdminAssets/js/product.js"></script>
}

