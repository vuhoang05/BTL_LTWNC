@{
}

@model BTL_LTWNC.Models.EF.Product

@if (Model == null)
{
    <h1 class="text-center text-uppercase text-danger fw-bold">No Records!!!</h1>
}
else
{
    <div class="p-5">
        <h1 class="text-center text-uppercase font-bold">Delete product</h1>

        <div>
            <h4>List Product</h4>

            <dl class="row pt-3">
                <dt class="col-sm-2">
                    ID:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.iProductID)
                </dd>

                <dt class="col-sm-2">
                    Image:
                </dt>
                <dd class="col-sm-10">
                    <img src="~/public/images/@Model.sImageUrl" style="width: 100px; height: 100px"/>
                </dd>

                <dt class="col-sm-2">
                    Name:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.sProductName)
                </dd>

                <dt class="col-sm-2">
                    Category
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.categoryName
                </dd>

                <dt class="col-sm-2">
                    Price:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.fPrice)
                </dd>
            </dl>

            <form method="post" asp-area="admin" asp-controller="product" asp-action="delete">
                <input type="hidden" asp-for="iProductID" />

                <div class="d-flex gap-4">
                    <a href="/admin/product/QuanLySanPham" class="btn btn-primary">Back</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
}
