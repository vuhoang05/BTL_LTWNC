@model BTL_LTWNC.Models.EF.User

<div class="p-5">
    <h1 class="text-center text-uppercase font-bold">Chỉnh sửa người dùng</h1>


    <form method="post" asp-area="Admin" asp-controller="User" asp-action="Edit">
        <div class="mb-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="iUserID" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" asp-for="sUserName">
            <span asp-validation-for="sUserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input type="text" class="form-control" asp-for="sUserPassword">
            <span asp-validation-for="sUserPassword" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label class="form-label">Loại sản phẩm</label>
            @Html.DropDownListFor(model => model.iUserRoleID, (IEnumerable<SelectListItem>)ViewBag.roleList, "Chọn loại tài khoản", htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="d-flex gap-3">
            <a class="btn btn-danger" href="/admin/user/QuanLyNguoiDung">Quay lại</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
