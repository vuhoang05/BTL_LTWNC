@{
}

@model BTL_LTWNC.Models.EF.Order

<div class="p-5">

    <h1 class="text-center text-uppercase font-bold pb-2">Order management</h1>

    <div class="row">
        <dt class="col-sm-2">
            ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.iOrderID)
        </dd>

        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dOrderDate)
        </dd>

        <dt class="col-sm-2">
            Receiver:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sCustomerName)
        </dd>

        <dt class="col-sm-2">
            PhoneNumber:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sCustomerPhone)
        </dd>

        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sCustomerAddress)
        </dd>
    </div>

    <div class="mt-2 mb-5">
        <a href="/admin/Order/QuanLyDonHang" class="btn btn-small btn-danger" style="color: white !important">Back</a>
    </div>

    <hr />

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name's foof</th>
                    <th class="text-center">Quanlity</th>
                    <th class="text-center">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in TempData["OrderDetails"] as IEnumerable<BTL_LTWNC.Models.ViewModel.OrderDetailViewModel>)
                {
                    <tr>
                        <td class ="text-center">@item.iDetailProductID</td>
                        <td class="text-center">@item.sProductName</td>
                        <td class="text-center">@item.iDetailQuantity</td>
                        <td class="text-center">@item.fDetailPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
