@model BTL_LTWNC.Models.EF.ProductCategory

<div class="p-5">
    <h1 class="text-center text-uppercase font-bold">Add product</h1>

    <form method="post" asp-area="Admin" asp-controller="ProductCategory" asp-action="Create">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="sCategoryName">
            <span asp-validation-for="sCategoryName" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3">
            <a class="btn btn-danger" href="/admin/productcategory/QuanLyDanhMuc">Back</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
