@{
}

@model BTL_LTWNC.Models.EF.ProductCategory

@if (Model == null)
{
    <h1 class="text-center text-uppercase text-danger font-bold">No Records!!!</h1>
}
else
{
    <div class="p-5">
        <h1 class="text-center text-uppercase font-bold">Edit ProductCategory </h1>

        <form method="post" asp-area="Admin" asp-controller="ProductCategory" asp-action="Edit">
            <div class="mb-3">
                <label for="" class="form-label">ProductCategory ID</label>
                <input type="text" class="form-control" asp-for="iCategoryID" placeholder="ProductCategory ID" readonly>
                <span asp-validation-for="iCategoryID" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="" class="form-label">ProductCategory's Name</label>
                <input type="text" class="form-control" asp-for="sCategoryName" placeholder="ProductCategory's Name">
                <span asp-validation-for="sCategoryName" class="text-danger"></span>
            </div>

            <div class="d-flex gap-3">
                <a class="btn btn-danger" href="/admin/productcategory/QuanLyDanhMuc">Back</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
}
