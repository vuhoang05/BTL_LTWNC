@{
}

@model BTL_LTWNC.Models.EF.ProductCategory

@if (Model == null)
{
    <h1 class="text-center text-uppercase text-danger font-bold">Không có bản ghi nào!!!</h1>
}
else
{
    <div class="p-5">
        <h1 class="text-center text-uppercase font-bold">Sửa loại sản phẩm</h1>

        <form method="post" asp-area="Admin" asp-controller="ProductCategory" asp-action="Edit">
            <div class="mb-3">
                <label for="" class="form-label">Mã loại sản phẩm</label>
                <input type="text" class="form-control" asp-for="iCategoryID" placeholder="Mã loại sản phẩm" readonly>
                <span asp-validation-for="iCategoryID" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Tên loại sản phẩm</label>
                <input type="text" class="form-control" asp-for="sCategoryName" placeholder="Tên loại sản phẩm">
                <span asp-validation-for="sCategoryName" class="text-danger"></span>
            </div>

            <div class="d-flex gap-3">
                <a class="btn btn-danger" href="/admin/productcategory/QuanLyDanhMuc">Quay lại</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
}
