    <div class="container">


        <div class="product-list">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="product__item p-2">
                        <div class="product__img">
                            <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.iProductID"><img src="~/public/images/@item.sImageUrl" alt=""></a>
                        </div>

                        <h3 class="product__name p-2"><a href="#"></a>@item.sProductName</h3>
                        <a class="Descreption">@item.Descreption</a>
                        <div class="card__bottom ps-2 pe-2 pb-2 d-flex align-items-center justify-content-between">
                            <a class="price">
                                @item.fPrice $
                            </a>
                        </div>

                    </div>
                }
            }
        </div>
    </div>

  
