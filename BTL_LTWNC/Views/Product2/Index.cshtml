        <span class="select-input__label">
           MENU Các chức năng của sản phẩm 
        </span>
        <i class="select-input-icon fa-solid fa-chevron-down"></i>
        <!--List options-->
        <ul class="select-input__list">
            <li class="select-input__item">
                <a href="/admin/Product/ThemSanPham" class="select-input__link">Chức năng Thêm Sản Phẩm </a>
            </li>
            <li class="select-input__item">
                <a href="/admin/Product/QuanLySanPham" class="select-input__link">Chức năng sửa sản phẩm </a>
            </li>
            <li class="select-input__item">
                <a href="/admin/Product/QuanLySanPham" class="select-input__link">Chức năng xóa sản phẩm </a>
            </li>
            <li class="select-input__item">
                <a href="/admin/Product/QuanLySanPham" class="select-input__link">Chức năng xem danh sách  sản phẩm </a>
            </li>

        </ul>
    </div>
