<section class="container">
    <div class="col-md-12 text-center">
        <h1 class="mb-2" style="font-size: 4rem">Thanh toán</h1>
        <p class="m-2">Bạn hãy kiểm tra lại đơn hàng của mình</p>
    </div>


    <hr />

    @if (ViewBag.CartItem != null)
    {
        <div class="row">
            <div class="col-md-9">
                @await Html.PartialAsync("_CheckOutCustomerInfoPartialView.cshtml")
            </div>
            <div class="col-md-3">
                @await Html.PartialAsync("_CheckOutCartItemPartialView.cshtml", ViewData["cartItem"])

            </div>
        </div>
    }
    else
    {
        <div class="py-4">
            <p class="text-center" style="font-size: 1.4rem">
                Bạn chưa có sản phẩm nào. Vui lòng quay lại trang <a href="/shop" style="color: blue !important; text-decoration: underline">sản phẩm</a> để mua hàng.
            </p>
        </div>
    }
</section>

