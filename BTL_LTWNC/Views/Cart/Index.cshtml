@{
    ViewBag.Title = "Cart";
}

<link rel="stylesheet" href="./css/cart.css" asp-append-version="true" />

@model IEnumerable<BTL_LTWNC.Models.EF.CartItem>

@await Html.PartialAsync("~/Views/Shared/_CommonSectionPartialView.cshtml", (string)ViewBag.Title);

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <table class="table bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr id="trow_@item.iProductID">
                                    <td class="product_img">
                                        <img src="~/public/images/@item.sImageUrl" />
                                    </td>
                                    <td>@item.sProductName</td>
                                    <td>@item.iQuantity</td>
                                    <td>@item.fPrice.ToString("C0")</td>
                                    <td>@item.fTotalPrice.ToString("C0")</td>
                                    <td>
                                        <a href="#" data-id="@item.iProductID" class="btn btn-small btn-danger btnDeleteFromCart">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="12">
                                    <img src="~/public/images/empty-cart.png"/>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-3">
                <div class="cart_right">
                    <h6 class="text-center">Subtotal</h6>
                    <p id="cart_total" class="text-center">0</p>
                    <p class="text-center">
                        Not including taxes and shipping fee
                    </p>
                    <div class="p-3">
                        <a href="/checkout" class="btn btnCheckOut">Check out</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
