@model BTL_LTWNC.Models.ViewModel.OrderViewModel

@Html.AntiForgeryToken()

<form method="post" asp-controller="Cart" asp-action="CheckOut">
    <div class="form-group mb-3">
        <label class="mb-2">Họ tên khách hàng</label>
        <input type="text" class="form-control" asp-for="sCustomerName" />
        <span asp-validation-for="sCustomerName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Số điện thoại</label>
        <input type="text" class="form-control" onkeypress="return /[0-9]/i.test(event.key)" asp-for="sCustomerPhone">
        <span asp-validation-for="sCustomerPhone" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="mb-2">Địa chỉ</label>
        <input type="text" class="form-control" asp-for="sCustomerAddress" />
        <span asp-validation-for="sCustomerAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-block btn-success" style="color: white !important">Đặt hàng</button>
    </div>
</form>
