@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Home Page";
    var us = ViewContext.HttpContext.Session.GetString("UserName");
}

@model IEnumerable<BTL_LTWNC.Models.EF.Product>

<link rel="stylesheet" href="./css/home.css" asp-append-version="true" />


<section class="hero__section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                <div class="hero__content pt-4">
                    <p class="text-uppercase"> Now taking online orders</p>
                    <h2>Enjoy Our Delicious  <span style="color: #09B44E;">Food</span></h2>
                    <p>
                        Craving a taste of something delicious? Look no further than <span style="color: #09B44E;">Foodgasm</span>! We offer a wide variety 
                        of mouthwatering dishes, from classic comfort foods to exotic international cuisine.
                        Whether you're in the mood for a juicy burger, a savory pizza, 
                        we've got something to tantalize your taste buds.

                    </p>

                    <div class="btn buy__btn text-uppercase mt-3">
                        <a href="/shop">Order now</a>
                    </div>
                    
                </div>
            </div>
            <div class="col-md-6 col-lg-6">
                <img src="./public/images/sushi.png" />
            </div>
        </div>
    </div>
</section>

<section class="trending__products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Trending Products</h2>
            </div>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("~/Views/Shared/_ProductPartialView.cshtml", item)
            }
        </div>
    </div>
</section>

<section class="best_sales">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Best sales</h2>
            </div>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("~/Views/Shared/_ProductPartialView.cshtml", item)
            }
        </div>
    </div>
</section>

